﻿@{
    ViewBag.Title = "Peony - Bloomfiy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="product-detail-hero">
    <div class="container">
        <nav class="breadcrumb">
            <a href="@Url.Action("Index", "Home")">Home</a> &gt;
            <a href="@Url.Action("Catalog", "Product")">Shop</a> &gt;
            <span>Peony</span>
        </nav>
    </div>
</section>

<section class="product-detail">
    <div class="container">
        <div class="product-detail-grid">
            <!-- Product Images -->
            <div class="product-images">
                <div class="main-image">
                    <img src="~/Images/products_img/peony/peony_pink.png" alt="Pink Peony" id="mainProductImage">
                </div>
                <div class="image-thumbnails">
                    <div class="thumbnail active">
                        <img src="~/Images/products_img/peony/peony_pink.png" alt="Pink Peony">
                    </div>
                    <div class="thumbnail">
                        <img src="~/Images/products_img/peony/peony_red.png" alt="Red Peony">
                    </div>
                    <div class="thumbnail">
                        <img src="~/Images/products_img/peony/peony_white.png" alt="White Peony">
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="product-info-detail">
                <h1>Peony</h1>

                <!-- Color Selection -->
                <div class="color-selection-detail">
                    <label>Select Color:</label>
                    <div class="color-options-detail">
                        <div class="color-option-detail active" data-color="pink" data-price="68.99"
                             data-image="/Images/products_img/peony/peony_pink.png">
                            <div class="color-swatch-large" style="background-color: #ff69b4;"></div>
                            <div class="color-info">
                                <span class="color-name">Pink</span>
                                <span class="color-price">$68.99</span>
                            </div>
                        </div>

                        <div class="color-option-detail" data-color="red" data-price="72.99"
                             data-image="/Images/products_img/peony/peony_red.png">
                            <div class="color-swatch-large" style="background-color: #ff0000;"></div>
                            <div class="color-info">
                                <span class="color-name">Red</span>
                                <span class="color-price">$72.99</span>
                            </div>
                        </div>

                        <div class="color-option-detail" data-color="white" data-price="65.99"
                             data-image="/Images/products_img/peony/peony_white.png">
                            <div class="color-swatch-large" style="background-color: #ffffff; border: 1px solid #ccc;"></div>
                            <div class="color-info">
                                <span class="color-name">White</span>
                                <span class="color-price">$65.99</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="product-price-detail">
                    <span class="current-price">$68.99</span>
                    <span class="original-price">$78.99</span>
                </div>

                <div class="product-rating-detail">
                    ⭐⭐⭐⭐⭐ (256 reviews)
                </div>

                <div class="product-features-detail">
                    <div class="feature-item">
                        <strong>Origin:</strong> Holland
                    </div>
                    <div class="feature-item">
                        <strong>Scent:</strong> Scented
                    </div>
                    <div class="feature-item">
                        <strong>Vase Life:</strong> 5-7 days (with proper care)
                    </div>
                    <div class="feature-item">
                        <strong>Bloom Stage:</strong> Bud (on arrival)
                    </div>
                    <div class="feature-item">
                        <strong>Available Colors:</strong> Pink, Red, White
                    </div>
                </div>

                <!-- Add to Cart -->
                <div class="add-to-cart-detail">
                    <div class="quantity-selector">
                        <button class="quantity-btn minus">-</button>
                        <input type="number" value="1" min="1" max="10" class="quantity-input">
                        <button class="quantity-btn plus">+</button>
                    </div>
                    <button class="add-to-cart-btn large" data-product-id="7" data-color="pink" data-price="68.99">
                        Add to Cart - $68.99
                    </button>
                </div>

                <!-- Quick Features -->
                <div class="quick-features">
                    <div class="feature">
                        <span>🚚</span>
                        <div>
                            <strong>Free Delivery</strong>
                            <p>On orders over $50</p>
                        </div>
                    </div>
                    <div class="feature">
                        <span>💐</span>
                        <div>
                            <strong>Fresh Guarantee</strong>
                            <p>7-day freshness guarantee</p>
                        </div>
                    </div>
                    <div class="feature">
                        <span>🎨</span>
                        <div>
                            <strong>3 Colors</strong>
                            <p>Multiple color options</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Description & Details - ALL TOGETHER -->
        <div class="product-full-details">
            <!-- About Section -->
            <div class="detail-section" id="about">
                <h2>About Peonies</h2>
                <p class="lead">Peony stands out with its lush, rose-shaped blooms in a rich, sweet fragrance that fills any space. It offers calm and elegance impact for premium floral arrangements.</p>

                <div class="perfect-for">
                    <h3>🎯 Perfect For</h3>
                    <div class="occasion-tags">
                        <span class="occasion-tag">Birthday</span>
                        <span class="occasion-tag">Thank You</span>
                        <span class="occasion-tag">Weddings</span>
                        <span class="occasion-tag">Romantic Occasions</span>
                        <span class="occasion-tag">Anniversary</span>
                        <span class="occasion-tag">Special Events</span>
                    </div>
                </div>
            </div>

            <div class="tab-content" id="care">
                <h2>Peony Care Guide</h2>
                <div class="care-guide-container">
                    <!-- Image spans full width -->
                    <div class="care-image-full">
                        <img src="~/Images/products_img/peony/peony_care.JPG" alt="Flower Care Instructions">
                    </div>

                    <!-- Care info below the image -->
                    <div class="care-steps-simple">
                        <div class="care-step">
                            <strong>Keep in cool environment</strong> - Away from direct sunlight and heat sources
                        </div>
                        <div class="care-step">
                            <strong>Water maintenance</strong> - Change water every 2 days and trim stems at an angle
                        </div>
                        <div class="care-step">
                            <strong>Leaf care</strong> - Remove any leaves that fall below the water line
                        </div>
                        <div class="care-step">
                            <strong>Vase preparation</strong> - Display in a clean vase with fresh flower food
                        </div>
                        <div class="care-step">
                            <strong>Avoid contamination</strong> - Keep away from ripening fruit or direct heat
                        </div>
                    </div>
                </div>
            </div>
            <!-- Important Information -->
            <div class="detail-section important-section" id="important">
                <h2>📋 Important Information</h2>
                <div class="important-info">
                    <div class="info-card">
                        <div class="info-icon">🌿</div>
                        <div class="info-content">
                            <h3>Farm-fresh, wholesale grade</h3>
                            <p>Our flowers ship straight from the farm and are packed to protect them in transit and extend shelf life. Because they are farm-fresh and minimally handled, natural imperfections - such as minor bruising, bent or occasionally broken buds/stems - can occur. This is normal. A quick trim, rehydration, and light arranging on arrival will help them open beautifully.</p>
                        </div>
                    </div>

                    <div class="info-card">
                        <div class="info-icon">🌸</div>
                        <div class="info-content">
                            <h3>Bloom & longevity</h3>
                            <p>Actual appearance will vary as blooms continue to open with proper care. We take great care in selecting and packing, but once delivered, longevity depends on handling and environment.</p>
                        </div>
                    </div>

                    <div class="info-card warning-card">
                        <div class="info-icon">⚠️</div>
                        <div class="info-content">
                            <h3>Safety Notice</h3>
                            <p>For ornamental use only; not for human or animal consumption. Some flowers may cause skin/eye irritation and can be harmful if eaten. Please wash hands after handling and keep out of reach of children and pets.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>